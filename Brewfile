brew "gnupg"                # GPG 2
brew "glow"                 # Command line markdown renderer
brew "jq"                   # JSON swiss army knife
brew "mas"                  # Manage Mac App Store apps from the command line
brew "tmux"                 # Terminal multiplexer
brew "pinentry-mac"         # Enables GPG <> Keychain integration
brew "pipx"                 # Run Python executables installed with pip
brew "pngcrush"             # Compress png images
brew "rbspy"                # Sampling profiler for Ruby
brew "ripgrep"              # Faster ag built in Rust
brew "shellcheck"           # Shell linter
brew "socat"                # Socket swiss army knife
brew "the_silver_searcher"  # Faster ack
brew "tmate"                # Multiplayer terminal
brew "tree"                 # Show directory trees
brew "watch"                # Run a program periodically
brew "wget"                 # Download things
brew "youtube-dl"           # Download youtube videos

# Custom taps
tap "hmarr/tap"
brew "hmarr/tap/codeowners" # Check code ownership

