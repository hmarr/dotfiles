[alias]
	co = checkout
	ci = commit
	st = status
	rp = pull --rebase
	tidy-branches = !git branch --merged master | grep -v -e '^* ' -e '^. master$' -e '^. dev$' | xargs git branch -d
[core]
	excludesfile = ~/.gitignore_global
[push]
	default = simple
	autoSetupRemote = true
[branch]
	autosetuprebase = always
[commit]
	verbose = true
	gpgsign = true
[pull]
	ff = only
[init]
	defaultBranch = main
[include]
